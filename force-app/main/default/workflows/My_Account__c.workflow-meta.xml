<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>JOBS</fullName>
        <description>NEW ACCOUNTS CUSTOMER DETAILS</description>
        <protected>false</protected>
        <recipients>
            <recipient>saibaba@ctsqa.co</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/SalesNewCustomerEmail</template>
    </alerts>
    <alerts>
        <fullName>WELCOME_TO_NEW_CUSTOMER</fullName>
        <description>WELCOME TO NEW CUSTOMER</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/SalesNewCustomerEmail</template>
    </alerts>
    <rules>
        <fullName>MY NEW ACCOUNT</fullName>
        <actions>
            <name>JOBS</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>WELCOME_TO_NEW_CUSTOMER</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>My_Account__c.Account_number__c</field>
            <operation>notEqual</operation>
            <value>NULL</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
